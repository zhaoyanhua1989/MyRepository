<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView 
        android:id="@+id/main_backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
    <LinearLayout
        android:id="@+id/main_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/main_button1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button1" />

        <Button
            android:id="@+id/main_button2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button2" />

        <Button
            android:id="@+id/main_button3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button3" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/main_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/main_linearLayout1"
        >
        <Button
            android:id="@+id/main_button4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button4" />
        <Button
            android:id="@+id/main_button5"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button5" />
        <Button
            android:id="@+id/main_button6"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:textSize="12sp"
            android:text="@string/MainActivity_button6" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/main_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/main_linearLayout2"
        >
        <Button
            android:id="@+id/main_button7"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:textSize="12sp"
            android:text="@string/MainActivity_button7" />
        <Button
            android:id="@+id/main_button8"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button8" />
        <Button
            android:id="@+id/main_button9"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="@string/MainActivity_button9" />
    </LinearLayout>

</RelativeLayout>