<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/update_dialog_currentVersion"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本：1.4.0"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
        <TextView 
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <LinearLayout
                android:id="@+id/update_dialog_relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_dialog_explain1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="更新日期：2016-06-28"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/update_dialog_explain2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="更新大小：236M"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/update_dialog_explain3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="版本号：1.5.0"
                    android:textSize="10sp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_dialog_relativelayout1"
                android:layout_marginTop="10dp"
                android:fadeScrollbars="false"
                android:background="@drawable/update_dialog_tvbar" >

                <TextView
                    android:id="@+id/update_dialog_textView"
                    android:layout_width="match_parent"
                    android:layout_height="382dp"
                    android:text="更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n
                    更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n更新说明\n" />
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >
        <Button 
            android:id="@+id/update_dialog_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="退出游戏"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/update_dialog_select_bt1"
            />
        <TextView 
            android:layout_width="15dp"
            android:layout_height="match_parent"
            />
        <Button 
            android:id="@+id/update_dialog_nextUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="下次更新"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/update_dialog_select_bt2"
            />
        <TextView 
            android:layout_width="15dp"
            android:layout_height="match_parent"
            />
        <Button 
            android:id="@+id/update_dialog_updateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="立即更新"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/update_dialog_select_bt3"
            />
    </LinearLayout>

</LinearLayout>